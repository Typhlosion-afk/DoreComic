<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DoreComic.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="windowSplashScreenBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Button click animation. -->

        <!-- Splash screen. -->
<!--        <item name="android:windowSplashScreenBackground">@color/white</item>-->
<!--        <item name="android:windowSplashScreenAnimatedIcon">@drawable/...</item>-->
<!--        <item name="android:windowSplashScreenAnimationDuration">1000</item>-->
<!--        <item name="android:windowSplashScreenIconBackgroundColor">@color/...</item>-->
<!--        <item name="android:windowSplashScreenBrandingImage">@drawable/...</item>-->
    </style>

    <style name="BaseAppTheme" parent="android:Theme.Material">
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="postSplashScreenTheme">@style/Theme.DoreComic.Light</item>
    </style>

</resources>